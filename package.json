  "scripts": {
    "dev": "flutter run -d chrome --hot --ignore-deprecation",
    "bootstrap": "yarn generate ; yarn format",
    "format": "yarn fmt:fix && yarn fmt:sort && yarn fmt:hard",
    "generate": "yarn gen:asset && yarn fmt:sort",
    "get": "flutter pub get",
    "doctor": "flutter doctor -v",
    "reinstall": "yarn clean && yarn get && yarn bootstrap",
    "clean": "flutter clean",
    "ci": "yarn get --enforce-lockfile",
    "pub:dry": "flutter pub outdated --json > logs/outdated.json",
    "pub:hard": "flutter upgrade --force && flutter pub upgrade --major-versions",
    "pub:up": "flutter upgrade && flutter pub upgrade",
    "pub:list": "flutter pub deps",
    "build:aab": "flutter build appbundle --release --tree-shake-icons",
    "build:apk": "flutter build apk --release --tree-shake-icons",
    "build:ios": "flutter build ios --release --tree-shake-icons",
    "build:ipa": "flutter build ipa --release --tree-shake-icons",
    "devices:": "flutter custom-devices",
    "devices:real": "flutter devices --machine",
    "devices:virt": "flutter emulators",
    "fmt:fix": "dart fix --apply",
    "fmt:hard": "dart format .",
    "fmt:sort": "dart run import_sorter:main -e",
    "gen:asset": "dart run build_runner build --delete-conflicting-outputs",
    "gen:locale": "flutter gen-l10n",
    "logs": "flutter logs -d",
    "open:aos": "open -a 'Android Studio' android",
    "open:ios": "open -a 'Xcode' ios",
    "postbuild:aab": "open -a 'Android Studio' build/app/outputs/bundle/release",
    "postbuild:ipa": "open -a 'Xcode' build/ios/archive/Runner.xcarchive",
